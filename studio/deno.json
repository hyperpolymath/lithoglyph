{
  "name": "@hyperpolymath/formdb-studio",
  "version": "0.1.0",
  "exports": "./src/main.ts",
  "tasks": {
    "dev": "cargo tauri dev",
    "build": "cargo tauri build",
    "rescript": "npx rescript build -w",
    "rescript:build": "npx rescript build",
    "bundle": "deno run -A npm:esbuild src/main.tsx --bundle --outfile=dist/app.js --format=esm --external:@tauri-apps/api",
    "fmt": "deno fmt src/"
  },
  "imports": {
    "@tauri-apps/api": "npm:@tauri-apps/api@^2",
    "react": "npm:react@^18",
    "react-dom": "npm:react-dom@^18"
  },
  "fmt": {
    "indentWidth": 2,
    "singleQuote": true
  }
}
